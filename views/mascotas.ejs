<%- include("template/header", {title: "Mascotas"}) %> 

    <div class="container">
        <a class="btn btn-success btn-block my-4"
        href="/mascotas/newTask"
        >
            Create new task
        </a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascotas => { %>
                        <tr>
                            <td><%=mascotas.nombre  %></td>
                            <td><%=mascotas.descripcion  %></td>
                            <td>
                                <a 
                                    href="mascotas/<%= mascotas.id %> "
                                    class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                            </td>
                        </tr>
                        
                    <% }) %>
                <% } %>
            </tbody>
        </table>

        

    </div>

<%- include('template/footer')  %> 
